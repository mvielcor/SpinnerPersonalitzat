<!-- En este fixer, definim com serà cada element del gridview, que constarà d'una icona,
    i baix un text descriptiu
-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Item"
            android:layout_gravity="center"/>


</LinearLayout><!-- From: file:/Users/mviel/AndroidStudioProjects/NavigationDrawerAntic/app/src/main/res/layout/item_gridview_drawerlayout.xml -->